<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/lightergrey1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.MainActivity">

    <Button
        android:id="@+id/btnTextRecognition"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/text_recognition"
        android:textSize="20sp"
        android:textColor="@android:color/white"
        android:background="@color/darkergrey2"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/btnFaceRecognition"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/face_recognition"
        android:textSize="20sp"
        android:textColor="@android:color/white"
        android:background="@color/darkergrey2"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/btnImageLabeling"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/image_labeling"
        android:textSize="20sp"
        android:textColor="@android:color/white"
        android:background="@color/darkergrey2"
        android:layout_marginBottom="16dp" />

</LinearLayout>